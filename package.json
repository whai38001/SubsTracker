{
  "name": "subscription-manager",
  "version": "2.0.0",
  "description": "订阅管理系统 - 基于CloudFlare Workers",
  "main": "index.js",
  "scripts": {
    "dev": "wrangler dev --port 8787 --host 0.0.0.0",
    "deploy": "wrangler deploy",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.{js,ts}",
    "test": "jest",
    "format": "prettier --write src/**/*.{js,ts}",
    "docker:build": "docker build -t substracker:latest .",
    "docker:build-dev": "docker build --target development -t substracker:dev .",
    "docker:build-prod": "docker build --target production -t substracker:prod .",
    "docker:run": "docker run -p 8787:8787 substracker:latest",
    "docker:run-dev": "docker run -p 8787:8787 -v $(pwd):/app substracker:dev",
    "docker:run-prod": "docker run -p 8787:8787 substracker:prod",
    "docker:compose-up": "docker-compose up -d",
    "docker:compose-dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:compose-down": "docker-compose down",
    "docker:logs": "docker-compose logs -f substracker-prod"
  },
  "keywords": [
    "cloudflare-workers",
    "subscription-management",
    "notification",
    "lunar-calendar",
    "typescript",
    "docker"
  ],
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "wrangler": "^3.13.0"
  }
}
